<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bookmark.StoryPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Title" />
            <Label Text="{Binding Title}" />
            <Label Text="Creator" />
            <Label Text="{Binding Creator}" />
            <Label Text="Date Started" />
            <Label Text="{Binding Started,StringFormat='{0:MM/dd/yy}'}" />
            <Button Text="Finished" Clicked="OnFinishClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>